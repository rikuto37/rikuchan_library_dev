<% @document_title = "会員情報詳細" %>

<div class="card">
    <div class="card-header">
        <%= @document_title %>
    </div>

    <div class="card-body">
        <div class="mb-3 row">
            <div class="col-2">
                氏名:
            </div>
            <div class="col-10">
                <%= @user.name %>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                郵便番号:
            </div>
            <div class="col-10">
                <%= @user.post_code %>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                住所:
            </div>
            <div class="col-10">
                <%= @user.address %>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                電話番号:
            </div>
            <div class="col-10">
                <%= @user.tel_number %>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                E-mail:
            </div>
            <div class="col-10">
                <%= @user.email %>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                生年月日:
            </div>
            <div class="col-10">
                <%= @user.birth_date %>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                入会年月日:
            </div>
            <div class="col-10">
                <%= @user.join_date %>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                退会年月日:
            </div>
            <div class="col-10">
                <%= @user.resign_date %>
            </div>
        </div>
    </div>

    <div class="card-footer">
        <div class="d-flex justify-content-between">
            <div>
                <%= link_to '新規貸出登録', new_lending_path(user_id: @user.id), class:"btn btn-sm btn-outline-danger" %>
                <%= link_to '編集する', edit_user_path, class:"btn  btn-sm btn-outline-primary" %>
                <%= link_to '一覧へ戻る', users_path, class:"btn btn-link" %>
            </div>
            <%= button_to '誤登録情報を削除', user_path(@user), method: :delete, onclick: "return confirm('削除しますか?')", class:"btn btn-sm btn-outline-secondary" %>
        </div>
    </div>
</div>