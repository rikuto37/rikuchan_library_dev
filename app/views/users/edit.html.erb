<% @document_title = "会員情報編集" %>

<div class="card container">
    <%= render 'commons/errors', model: @user %>
    <%= form_with model: @user do |f| %>
        <%= render 'form', f: f %>
        <div class="card-footer">
            <%= f.submit '編集を確定', class:"btn btn-primary" %>
            <%= link_to '会員詳細へ戻る', @user, class:"btn btn-sm btn-outline-success" %>
            <%= link_to '会員一覧へ', users_path, class:"btn btn-sm btn-outline-secondary" %>
        </div>
    <% end %>
</div>