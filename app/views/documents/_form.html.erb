<div class="card-header">
    <h3>
        <%= @document_title %>
    </h3>
</div>

<div class="card-body">
    <div class="mb-3">
        <%= f.label :isbn, 'ISBN番号', class:"form-label" %>
        <%= f.text_field :isbn, class:"form-control w-auto",  value: @document.isbn, placeholder:"(例)1234567890123" %>
    </div>
    <div class="mb-3">
        <%= f.label :name, '資料名' %>
        <%= f.text_field :name, class:"form-control", value: @document.name, placeholder:"(例)7つの習慣" %>
    </div>
    <div class="mb-3">
        <%= f.label :category_id, '分類' %>
        <%= f.collection_select :category_id, Category.all, :id, :name, { include_blank: '選択してください'}, class:"form-control w-auto" %>
    </div>
    <div class="mb-3">
        <%= f.label :author, '著者' %>
        <%= f.text_field :author, class:"form-control", value: @document.author, placeholder:"(例)田中文豪" %>
    </div>
    <div class="mb-3">
        <%= f.label :publisher, '出版社' %>
        <%= f.text_field :publisher, class:"form-control", value: @document.publisher, placeholder:"(例)ワクワク文庫" %>
    </div>
    <div class="mb-3">
        出版日
        <%= f.date_field :published_on, class:"form-control w-auto", value: @document.published_on %>
    </div>
</div>