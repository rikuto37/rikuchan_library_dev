<% @document_title = "目録情報編集" %>
<div class="card container">
    <%= render 'commons/errors', model: @document %>
    <%= form_with model: @document do |f| %>
        <%= render 'form', f: f %>
        <div class="card-footer">
            <%= f.submit '編集を確定', class:"btn btn-primary" %>
            <%= link_to '目録詳細へ戻る', @document, class:"btn btn-sm btn-outline-success" %>
            <%= link_to '目録一覧へ', documents_path, class:"btn btn-sm btn-outline-secondary" %>
        </div>
    <% end %>
</div>
