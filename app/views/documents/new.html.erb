<% @document_title = "新規目録登録" %>
<%= @isbn_field = [ ] %>
<div class="card">
    <%= render 'commons/errors', model: @document %>
    <div class="card container">
        <%= form_with model: @document do |f| %>
            <%= render 'form', f: f %>
            <div class="card-footer">
                <%= f.submit '登録', class:"btn btn-danger" %>
                <%= link_to '一覧へ戻る', documents_path, class:"btn btn-link" %>
            </div>
        <% end %>
    </div>
</div>