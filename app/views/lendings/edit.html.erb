<% @document_title = "貸出情報編集" %>

<div class="card container">
    <%= render 'commons/errors', model: @lending %>

    <div class="card container">

        <div class="card-header">
            <h3>
                <%= @document_title %>
            </h3>
        </div>

        <%= form_with model: @lending do |f| %>
            <div class="card-body">
                <div class="mb-3 row">
                    <div class="col-2">
                        会員ID:
                    </div>
                    <div class="col-10">
                        <%= @lending.user_id %>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-2">
                        氏名:
                    </div>
                    <div class="col-10">
                        <%= @lending.user.name %>
                    </div>
                </div>
                <div class="mb-3">
                    <%= f.label :stock_id, '資料ID' %>
                    <%= f.text_field :stock_id, class:"form-control w-auto", value: @lending.stock_id %>
                </div>
                <div class="mb-3">
                    貸出年月日
                    <%= f.date_field :lent_date, class:"form-control w-auto", value: @lending.lent_date %>
                </div>
                <div class="mb-3">
                    返却期日
                    <%= f.date_field :due_date, class:"form-control w-auto", value: @lending.due_date %>
                </div>
                <div class="mb-3">
                    返却年月日
                    <%= f.date_field :return_date, class:"form-control w-auto", value: @lending.return_date %>
                </div>
                <div class="mb-3">
                    <%= f.label :comment, '備考' %>
                    <%= f.text_area :comment, class:"form-control", value: @lending.comment, placeholder: "コメントを記入(任意)" %>
                </div>
            </div>        

            <div class="card-footer">
                 <div class="card-footer">
                    <%= f.submit '編集を確定', class:"btn btn-primary" %>
                    <%= link_to '貸出詳細へ戻る', @lending, class:"btn btn-sm btn-outline-success" %>
                    <%= link_to '貸出一覧へ', lendings_path, class:"btn btn-sm btn-outline-secondary" %>
                </div>
            </div>

            <%= f.hidden_field :user_id, value: @lending.user_id %>
        <% end %>
    </div>
</div>

