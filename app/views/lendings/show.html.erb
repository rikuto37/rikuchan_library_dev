<% @document_title = "貸出情報詳細" %>

<div class="card">
    <div class="card-header">
        <%= @document_title %>
    </div>

    <div class="card-body">
        <div class="mb-3 row">
            <div class="col-2">
                会員ID:
            </div>
            <div class="col-10">
                <%= @lending.user_id %>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                氏名:
            </div>
            <div class="col-10">
                <%= @lending.user.name %>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                資料ID:
            </div>
            <div class="col-10">
                <%= @lending.stock_id %>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                資料名:
            </div>
            <div class="col-10">
                <%= @lending.stock.document.name %>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                貸出年月日:
            </div>
            <div class="col-10">
                <%= @lending.lent_date %>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                返却期日:
            </div>
            <div class="col-10">
                <%= @lending.due_date %>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                返却年月日:
            </div>
            <div class="col-10">
                <%= @lending.return_date %>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                備考:
            </div>
            <div class="col-10">
                <%= @lending.comment %>
            </div>
        </div>
    </div>

    <div class="card-footer">
        <div class="d-flex justify-content-between">
            <div>
                <%= link_to '編集する', edit_lending_path, class:"btn  btn-sm btn-outline-primary" %>
                <%= link_to '一覧へ戻る', lendings_path, class:"btn btn-link" %>
            </div>
            <%= button_to '誤登録情報を削除', lending_path(@lending), method: :delete, onclick: "return confirm('削除しますか?')", class:"btn btn-sm btn-outline-secondary" %>
        </div>
    </div>
</div>
